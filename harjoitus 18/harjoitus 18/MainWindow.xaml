<Window x:Class="harjoitus_18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:harjoitus_18"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Numero 1:" />
            <TextBox x:Name="txtNumero1" />

            <TextBlock Text="Numero 2:" />
            <TextBox x:Name="txtNumero2" />

            <Button Content="Summa" Click="BtnSumma_Click" />
            <Button Content="Erotus" Click="BtnErotus_Click" />
            <Button Content="Kertolasku" Click="BtnKertolasku_Click" />
            <Button Content="Jakolasku" Click="BtnJakolasku_Click" />

            <TextBlock x:Name="txtTulos" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
