<Window x:Class="harjoitus_21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:harjoitus_21"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <CheckBox Name="chkProduct1" Content="Tuote 1" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="chkProduct2" Content="Tuote 2" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="chkProduct3" Content="Tuote 3" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <StackPanel Name="StockPanel" Margin="10">
                <TextBlock Text="Valitut tuotteet:" FontWeight="Bold"/>
            </StackPanel>
            <Button Content="Osta" Click="BuyButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
