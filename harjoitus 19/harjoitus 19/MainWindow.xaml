        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:harjoitus_19"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Valitse kerros (1 - 6):" Margin="0,0,0,10"/>
            <TextBox x:Name="KerrosTextBox" Margin="0,0,0,10"/>
            <Button Content="Siirry kerrokseen" Click="SiirryKerrokseenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
